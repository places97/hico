<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	  <Appenders>
	    <Console name="console" target="SYSTEM_OUT">
	      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %5p [%c{1}] %m%n"/>
	    </Console>

      <!-- ðŸ’¡ ë§ˆìŠ¤í‚¹ ì •ì±…ì„ ì ìš©í•˜ëŠ” Rewrite Appender ì¶”ê°€ -->
      <Rewrite name="maskingRewrite">
        <AppenderRef ref="console"/>
        <LogMaskingPolicy />
      </Rewrite>
	  </Appenders>
	
	  <Loggers>
	    <Logger name="jdbc.sqlonly" level="DEBUG" additivity="false">
	      <AppenderRef ref="maskingRewrite"/>
	    </Logger>
	
	    <Logger name="jdbc.sqltiming" level="DEBUG" additivity="false">
	      <AppenderRef ref="maskingRewrite"/>
	    </Logger>
	    
	    <Logger name="jdbc.audit" level="DEBUG" additivity="false">
	      <AppenderRef ref="maskingRewrite"/>
	    </Logger>
	    
	    <Logger name="java.sql" level="DEBUG" additivity="false">
	      <AppenderRef ref="maskingRewrite"/>
	    </Logger>
	    
	    <!-- Application Log-->
	    <Logger name="kr.go" level="DEBUG" additivity="false">
	      <AppenderRef ref="maskingRewrite"/>
	    </Logger>
	        
	    <!-- íŠ¹ì • ë¡œê·¸ ì œì™¸ -->
	    <Logger name="org.mybatis.spring.SqlSessionUtils" level="ERROR" additivity="false">
	        <AppenderRef ref="maskingRewrite"/>
	    </Logger>
	
	    <Logger name="org.springframework.security.web" level="ERROR" additivity="false">
	        <AppenderRef ref="maskingRewrite"/>
	    </Logger>
	    
	    <Logger name="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping" level="ERROR" additivity="false">
	        <AppenderRef ref="maskingRewrite"/>
	    </Logger>
	    
	    <Logger name="org.springframework.jdbc.datasource.DataSourceUtils" level="ERROR" additivity="false">
	        <AppenderRef ref="maskingRewrite"/>
	    </Logger>
	    
	    <Logger name="org.mybatis.spring.transaction.SpringManagedTransaction" level="ERROR" additivity="false">
	        <AppenderRef ref="maskingRewrite"/>
	    </Logger>
	    
	    <Logger name="org.thymeleaf" level="ERROR" additivity="false">
            <AppenderRef ref="maskingRewrite" />
        </Logger>
	    <!-- //íŠ¹ì • ë¡œê·¸ ì œì™¸ -->
	    
	    <Root level="DEBUG">
	      <AppenderRef ref="maskingRewrite"/>
	    </Root>
    
		</Loggers>
</Configuration>